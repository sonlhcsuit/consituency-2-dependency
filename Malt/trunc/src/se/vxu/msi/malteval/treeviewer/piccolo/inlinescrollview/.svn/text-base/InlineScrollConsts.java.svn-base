
package se.vxu.msi.malteval.treeviewer.piccolo.inlinescrollview;

/**
    some constants for arrow spacing & drawing 
*/
interface InlineScrollConsts {
    /** space beetween 2 arrows */
    int arrowHeadWidth = 7;
    
    /** vertical spacing beetween 2 arrows */
    int arrowVSpace = 10;  
    
    /** initial height for an arrow */
    int arrowISpace = 40;   
    
    /** arrow's head delta x factor */
    int arrowHeadDX = 3;    
    
    /** arrow's head delta y factor */
    int arrowHeadDY = 10;   
}
